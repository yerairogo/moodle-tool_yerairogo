{{!
    @template tool_yerairogo/entries_list

    Template for the tool_yerairogo entries list

    Classes required for JS:
    * tool_yerairogo_entries_list

    Data attributes required for JS:
    * data-entryid
    * data-action
    * data-courseid

    Example context (json):
    {
        "tooldescription": "Description of this tool"
        "courseid": 2,
        "coursename": "Test course",
        "entriestable": "List of entries",
        "editurl": "#"
    }
}}

<div class="entries_list" data-courseid="{{courseid}}">
    <h2>{{#str}} title, tool_yerairogo {{/str}}</h2>
    <p>{{#str}} coursename, tool_yerairogo, {{{coursename}}} {{/str}}</p>

    {{#tooldescription}}
    <p>{{{.}}}</p>
    {{/tooldescription}}

    {{{entriestable}}}

    {{#editurl}}
    <a href="{{{.}}}">
        <button class="btn btn-primary">
            {{#str}} newentry, tool_yerairogo {{/str}}
        </button>
    </a>
    {{/editurl}}
</div>

{{#js}}
require(['tool_yerairogo/confirmation'], (confirmation) => confirmation.init('[data-action=deleteentry]'))
{{/js}}